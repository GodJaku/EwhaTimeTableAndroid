<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp">
    
    <TextView
        android:id="@+id/calculator_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="@string/drawer04"
        android:textColor="#588c73"
        android:textSize="17dp"
        android:textStyle="bold" />
    
    <ListView
        android:id="@+id/listviewCalculator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/calculator_name"
        android:layout_marginTop="10dp"/>
    
    <TextView
        android:id="@+id/buttonCalculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listviewCalculator"
        android:layout_alignParentRight="true"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="@string/calculateFragmentButtonText01"
        android:background="@drawable/calculate_button"
        android:textColor="#AAffffff"/>
    
    <TextView
        android:id="@+id/textviewCalculateResult"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/buttonCalculate"
        android:layout_alignBottom="@+id/buttonCalculate"
        android:layout_toLeftOf="@+id/buttonCalculate"
        android:layout_below="@+id/listviewCalculator"
        android:layout_marginRight="10dp"
        android:text="@string/calculateFragmentResultText"
       	android:textColor="#588c73"
       	android:textSize="15dp"
       	android:textStyle="bold"
       	android:gravity="center_vertical"/>

</RelativeLayout>
