                android:weightSum="2" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#588c73"
                    android:textSize="15dp"
                    android:text="@string/popuptext07" />

                <TextView
                    android:id="@+id/classPopup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#588c73"
                    android:textSize="15dp"
